<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Payment_exceeds_order_total_amount</fullName>
    <active>true</active>
    <errorConditionFormula>(Order__r.Amount_paid__c + Amount__c) &gt; Order__r.Total_Amount__c</errorConditionFormula>
    <errorDisplayField>Amount__c</errorDisplayField>
    <errorMessage>Payment amount exceeds order amount owed</errorMessage>
</ValidationRule>
